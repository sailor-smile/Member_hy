    <script type="text/javascript">

        jQuery(function () {
            $('#upPwdBtn').on('click', function () {
                _updatePwd();
            });

            function _updatePwd() {
                jQuery.ajax({
                    dataType: "json",
                    url: "/User/UpdatePwd",
                    data: { "pwd": $('#newPwd').val() },
                    type: "POST",
                    success: function (result) {
                        if (result.code == 1) {
                            alert('修改成功');
                            $('#upPwdModal').modal('hide');
                        } else {
                            alert('修改失败');
                        }
                    },
                    beforeSend: function () { },
                    error: function () {
                        alert('程序出错');
                    }
                });
            }
        });
